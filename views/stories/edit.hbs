<h3>Edit Story</h3>
{{!-- almost same template as for add.hbs (add story) --}}
<div class="row">
    <form action="/stories/{{story._id}}" method="POST" class="col s12">
    <input type="hidden" name = "_method" value="PUT">
    {{!-- since we need to update , we make a PUT request , remember , PUT AND DELTE requests are not facilitated by default , we have to method override them --}}
    <div class = "row"></div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{story.title}}">
                {{!-- added value (story title) to show up in the form --}}
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    {{#select story.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story:</h5>
                <textarea id="body" name="body">{{story.body}}</textarea>
                {{!-- added story.body (the body of original story to be edited) --}}
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>